{
  //
  // General
  //
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.dragAndDrop": false,
  "editor.find.seedSearchStringFromSelection": "never",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 120],
  "editor.smoothScrolling": true,
  "explorer.compactFolders": false,
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.smoothScrolling": true,
  "window.autoDetectColorScheme": true,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.list.smoothScrolling": true,
  "workbench.preferredDarkColorTheme": "Default Dark+",
  "workbench.preferredLightColorTheme": "Default Light+",

  //
  // AI
  //
  "github.copilot.nextEditSuggestions.enabled": true,
  "chat.tools.terminal.autoApprove": {
    "deno task check": true,
    "deno task fix": true,
    "deno task test": true
  },

  //
  // Git
  //
  "diffEditor.experimental.showMoves": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "git.confirmSync": false,
  "git.mergeEditor": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.views.scm.grouped.views": {
    "stashes": false
  },

  //
  // Language specific
  //
  "[sql]": {
    "editor.defaultFormatter": "bradymholt.pgformatter"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  //
  // Plugins
  //
  "cSpell.userWords": [],
  "markdownlint.config": {
    "MD007": false, // conflict with Prettier
    "MD010": false, // conflict with Prettier
    "MD024": false, // conflict with Prettier
    "MD030": false, // conflict with Prettier
    "MD031": false, // interferes with code blocks in lists
    "MD034": false // no bare url
  }

  //
  // New
  //
}
