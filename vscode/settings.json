{
  //
  // General
  //
  "editor.cursorBlinking": "solid",
  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "always",
  "editor.matchBrackets": "near",
  "editor.dragAndDrop": false,
  "editor.wrappingIndent": "indent",
  "editor.rulers": [80, 120],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.accessibilitySupport": "off",
  "editor.suggest.showWords": false,
  "editor.inlineSuggest.enabled": true, // Needed for Copilot
  "editor.stickyScroll.enabled": true, // just trying, might disable later

  "breadcrumbs.enabled": false,

  "explorer.openEditors.visible": 0,
  "explorer.compactFolders": false,

  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,

  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.editor.tabCloseButton": "off",
  "workbench.startupEditor": "none",
  "workbench.preferredLightColorTheme": "Default Light+",
  "workbench.preferredDarkColorTheme": "Default Dark+",

  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.cursorBlinking": true, // does not seem to do anything lately
  "terminal.integrated.cursorStyle": "line",

  "security.workspace.trust.untrustedFiles": "open",

  "typescript.updateImportsOnFileMove.enabled": "always",

  "window.autoDetectColorScheme": true,

  //
  // Git
  //

  "git.confirmSync": false,
  "git.mergeEditor": false,

  "diffEditor.ignoreTrimWhitespace": false,

  "gitlens.hovers.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  //
  // Markdownlint
  //
  "markdownlint.config": {
    "MD007": false, // conflict with Prettier
    "MD010": false, // conflict with Prettier
    "MD024": false, // conflict with Prettier
    "MD030": false, // conflict with Prettier
    "MD031": false, // interferes with code blocks in lists
    "MD034": false // no bare url
  },

  //
  // Prettier
  //
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[less]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[scss]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[markdown]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[yaml]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[sql]": { "editor.defaultFormatter": "bradymholt.pgformatter" },

  //
  // Spelling
  //
  "cSpell.userWords": [
    "antialiasing",
    "Chrono",
    "fierve",
    "Liquibase",
    "Lockfiles",
    "mailchimp",
    "mixpanel",
    "Petr",
    "PNPM",
    "postgres",
    "Pressable",
    "watchlist"
  ],

  //
  // Autogenerated
  //

  "window.zoomLevel": 1,
  "workbench.colorTheme": "Default Light+"
}
